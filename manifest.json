{
  "manifest_version": 3,
  "name": "LMS Dash",
  "description": "LMS Dash is your Canvas \"assistant.\" This browser extension helps instructors, instructional designers, and administrators manage and use Canvas more efficiently.",
  "content_security_policy": {
    "extension_pages": "default-src 'self'"
  },
  "version": "0.1.0",
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "service_worker": "src/ServiceWorker/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "src/ContentScript/index.js"
      ],
      "matches": [
        "https://*.instructure.com/*"
      ]
    }
  ],
  "side_panel": {
    "default_path": "src/SidePanel/index.html"
  },
  "permissions": [
    "sidePanel",
    "tabs"
  ]
}